<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.hackathon.quizit.app" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ch.hackathon.quizit.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".question.ShowQuestion"
            android:label="@string/title_activity_show_question" >
        </activity>
        <activity
            android:name=".question.QuestionsActivity"
            android:label="@string/title_activity_questions_activity">
        </activity>
        <activity
            android:name=".group.JoinGroupActivity"
            android:label="@string/title_activity_join_group">
        </activity>
        <activity
            android:name=".group.CreateGroupActivity"
            android:label="@string/title_activity_create_group">
         </activity>
    </application>

</manifest>
