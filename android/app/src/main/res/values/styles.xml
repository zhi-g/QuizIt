<?xml version="1.0" encoding="utf-8"?>
    <resources>
        <!-- the theme applied to the application or activity -->
        <style name="AppTheme"
            parent="@style/Theme.AppCompat">
            <item name="android:actionBarStyle">@style/Theme.AppCompat.Light</item>
            <item name="android:actionMenuTextColor">@color/black</item>

            <!-- Support library compatibility -->
            <item name="actionBarStyle">@style/Theme.AppCompat.Light</item>
            <item name="actionMenuTextColor">@color/silver</item>
        </style>

        <!-- ActionBar styles -->
        <style name="MyActionBar"
            parent="@style/Widget.AppCompat.ActionBar">
            <item name="android:titleTextStyle">@style/Theme.AppCompat.Light</item>

            <!-- Support library compatibility -->
            <item name="titleTextStyle">@style/Theme.AppCompat.Light</item>
        </style>

        <!-- ActionBar title text -->
        <style name="MyActionBarTitleText"
            parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
            <item name="android:textColor">@color/silver</item>
            <!-- The textColor property is backward compatible with the Support Library -->
        </style>

        <!-- ActionBar tabs text -->
        <style name="MyActionBarTabText"
            parent="@style/Widget.AppCompat.ActionBar.TabText">
            <item name="android:textColor">@color/silver</item>
            <!-- The textColor property is backward compatible with the Support Library -->
        </style>
</resources>
